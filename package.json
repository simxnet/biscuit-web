{
	"name": "@biscuit/web",
	"description": "Presentation page of the biscuit modules.",
	"author": "biscuitland",
	"private": true,
	"scripts": {
		"build": "nuxt build",
		"dev": "nuxt dev",
		"generate": "nuxt generate",
		"preview": "nuxt preview",
		"update": "pnpm up --interactive",
		"update:force": "pnpm up --latest",
		"lint:check": "eslint --ext .ts,.tsx,.vue --ignore-path .gitignore .",
		"lint:fix": "eslint --fix --ext .ts,.tsx,.vue --ignore-path .gitignore .",
		"format": "prettier --write ./**/*.{ts,tsx,vue}",
		"postinstall": "nuxt prepare && husky install .husky",
		"update:i": "pnpm up --interactive",
		"update:f": "pnpm up --latest"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.4.2",
		"@commitlint/config-conventional": "^17.4.2",
		"@commitlint/format": "^17.4.0",
		"@headlessui/vue": "^1.7.7",
		"@nuxt/image-edge": "1.0.0-27907872.f4dd19d",
		"@nuxtjs/color-mode": "^3.2.0",
		"@nuxtjs/fontaine": "^0.2.4",
		"@nuxtjs/tailwindcss": "^6.3.0",
		"@tailwindcss/typography": "^0.5.9",
		"@types/marked": "^4.0.8",
		"@types/prismjs": "^1.26.0",
		"@typescript-eslint/eslint-plugin": "^5.49.0",
		"@typescript-eslint/parser": "^5.49.0",
		"@vue/eslint-config-standard": "^8.0.1",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.32.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-nuxt": "^4.0.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-vue": "^9.9.0",
		"git-cz": "^4.9.0",
		"husky": "^8.0.3",
		"ky": "^0.33.2",
		"lint-staged": "^13.1.0",
		"marked": "^4.2.12",
		"nuxt": "3.1.1",
		"nuxt-icon": "^0.2.10",
		"prettier": "^2.8.3",
		"pretty-quick": "^3.1.3"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"commitlint": {
		"formatter": "@commitlint/format",
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"pnpm": {
		"peerDependencyRules": {
			"ignoreMissing": [
				"webpack",
				"vue",
				"typescript",
				"tailwindcss"
			]
		},
		"allowedDeprecatedVersions": {
			"sourcemap-codec": "*",
			"rollup-plugin-terser": "*",
			"stable": "*"
		}
	},
	"lint-staged": {
		"**/*.{ts,tsx,vue,html,css}": [
			"pnpm lint:fix"
		]
	}
}
