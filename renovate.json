{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "labels": [
        "dependencies",
        "enhancement"
    ],
    "assignees": [
        "sawa-ko"
    ],
    "assigneesFromCodeOwners": true,
    "baseBranches": [
        "next"
    ],
    "cloneSubmodules": true,
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ],
            "automerge": true
        }
    ],
    "extends": [
        "@nuxtjs",
        ":gitSignOff"
    ]
}